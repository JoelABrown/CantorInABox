<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <RootNamespace>Mooseware.CantorInABox</RootNamespace>
    <ApplicationIcon>Resources\ChetIcon.ico</ApplicationIcon>
    <Platforms>AnyCPU;x86;x64</Platforms>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Title>CantorInABox</Title>
    <Version>2.0.0</Version>
    <Company>Mooseware</Company>
    <Description>Audio file playlist builder and player with pitch, tempo, pan and volume controls, including via an HTTP API</Description>
    <Copyright>Copyright Mooseware Ltd 2025</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="AudioProgram.cs" />
    <Compile Remove="Command.cs" />
    <Compile Remove="Settings.cs" />
    <Compile Remove="SoundProcessorViewModel.cs" />
    <Compile Remove="StatusMessage.cs" />
    <Compile Remove="Track.cs" />
    <Compile Remove="TrackList.cs" />
    <Compile Remove="ViewModels\MainViewModel.cs" />
    <Compile Remove="ViewModels\OldTrackViewModel.cs" />
    <Compile Remove="ViewModels\TrackListViewModel.cs" />
    <Compile Remove="ViewModels\TrackPageNumber.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="appsettings.json" />
    <None Remove="Resources\Add-Audio-Button-Icon.png" />
    <None Remove="Resources\asterisk.png" />
    <None Remove="Resources\check_24x19.png" />
    <None Remove="Resources\edit_40x40.png" />
    <None Remove="Resources\folder_stroke_24x24.png" />
    <None Remove="Resources\Include-Audio-Button-Icon.png" />
    <None Remove="Resources\list_16x14.png" />
    <None Remove="Resources\minus_24x6.png" />
    <None Remove="Resources\New-Playlist-Button-Icon.png" />
    <None Remove="Resources\next.png" />
    <None Remove="Resources\nonext.png" />
    <None Remove="Resources\noprev.png" />
    <None Remove="Resources\Open-Playlist-Button-Icon.png" />
    <None Remove="Resources\paused.png" />
    <None Remove="Resources\playing.png" />
    <None Remove="Resources\plus_24x24.png" />
    <None Remove="Resources\prev.png" />
    <None Remove="Resources\preview.png" />
    <None Remove="Resources\Remove-Audio-Button-Icon.png" />
    <None Remove="Resources\Reset-Button-Icon-40x40.png" />
    <None Remove="Resources\Save-Playlist-As-Button-Icon.png" />
    <None Remove="Resources\Save-Playlist-Button-Icon.png" />
    <None Remove="Resources\Track-Tweaks-Icon-40x40.png" />
    <None Remove="Resources\Warning-80x80.png" />
    <None Remove="Resources\x_21x21.png" />
  </ItemGroup>

  <ItemGroup>
    <Page Remove="Themes\Templates\LibraryEntryDataTemplate.xaml" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Add-Audio-Button-Icon.png" />
    <Resource Include="Resources\asterisk.png" />
    <Resource Include="Resources\check_24x19.png" />
    <Resource Include="Resources\ChetIcon.ico">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\edit_40x40.png" />
    <Resource Include="Resources\folder_stroke_24x24.png" />
    <Resource Include="Resources\Include-Audio-Button-Icon.png" />
    <Resource Include="Resources\list_16x14.png" />
    <Resource Include="Resources\minus_24x6.png" />
